import tkinter as tk
import math

def calculate_triangle():
    try:
        a = float(entry_a.get())
        b = float(entry_b.get())
        c = float(entry_c.get())

        if a <= 0 or b <= 0 or c <= 0 or a + b <= c or a + c <= b or b + c <= a:
            result_label.config(text="Введіть коректні довжини сторін трикутника.")
            return

        # Обчислення медіани mc
        mc = 0.5 * math.sqrt(2 * a**2 + 2 * b**2 - c**2)

        # Обчислення висоти ha
        s = (a + b + c) / 2
        area = math.sqrt(s * (s - a) * (s - b) * (s - c))
        ha = (2 * area) / a

        result_label.config(text=f"Медіана mc: {mc:.2f}\nВисота ha: {ha:.2f}")

    except ValueError:
        result_label.config(text="Будь ласка, введіть числові значення для сторін.")

